<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="create-address" author="Vlada Proskurina">
        <createTable tableName="address">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="street" type="varchar(255)">
            </column>
            <column name="house_number" type="varchar(255)">
            </column>
            <column name="city" type="varchar(255)">
            </column>
            <column name="region" type="varchar(255)">
            </column>
            <column name="country" type="varchar(255)">
            </column>
            <column name="post_code" type="varchar(255)">
            </column>
            <column name="charging_station_id" type="uuid"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="address"
                                 baseColumnNames="charging_station_id"
                                 constraintName="fk_address_charging_station_id"
                                 referencedTableName="charging_station"
                                 referencedColumnNames="id"
                                 onDelete="SET NULL"/>
    </changeSet>
</databaseChangeLog>