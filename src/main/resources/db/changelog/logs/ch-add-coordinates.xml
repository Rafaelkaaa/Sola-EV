<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="create-coordinates" author="Vlada Proskurina">
        <createTable tableName="coordinates">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="latitude" type="double">
            </column>
            <column name="longitude" type="double">
            </column>
            <column name="charging_station_id" type="uuid"/>
        </createTable>
        <sql>
            <![CDATA[
            ALTER TABLE coordinates
                ADD CONSTRAINT latitude_check CHECK (latitude >= -90 AND latitude <= 90);
            ]]>
        </sql>
        <sql>
            <![CDATA[
            ALTER TABLE coordinates
                ADD CONSTRAINT longitude_check CHECK (longitude >= -180 AND longitude <= 180);
            ]]>
        </sql>
        <addForeignKeyConstraint baseTableName="coordinates"
                                 baseColumnNames="charging_station_id"
                                 constraintName="fk_coordinates_charging_station_id"
                                 referencedTableName="charging_station"
                                 referencedColumnNames="id"
                                 onDelete="SET NULL"/>
    </changeSet>
</databaseChangeLog>